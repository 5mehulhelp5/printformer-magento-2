<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="printformer_products.grid.container">
            <block class="Rissc\Printformer\Block\Adminhtml\Products\Grid" name="printformer_products.grid" as="grid">
                <arguments>
                    <argument name="id" xsi:type="string">products</argument>
                    <argument name="dataSource" xsi:type="object">Rissc\Printformer\Model\ResourceModel\Product\Collection</argument>
                    <argument name="default_sort" xsi:type="string">store_id</argument>
                    <argument name="default_dir" xsi:type="string">ASC</argument>
                    <argument name="save_parameters_in_session" xsi:type="string">1</argument>
                </arguments>
                <block class="Magento\Backend\Block\Widget\Grid\ColumnSet" name="printformer_products.grid.columnSet" as="grid.columnSet">
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="master_id">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Master-ID</argument>
                            <argument name="index" xsi:type="string" translate="true">master_id</argument>
                            <argument name="type" xsi:type="string">text</argument>
                            <argument name="column_css_class" xsi:type="string">col-id</argument>
                            <argument name="header_css_class" xsi:type="string">col-id</argument>
                            <argument name="width" xsi:type="string">100</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="product_name">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Name</argument>
                            <argument name="index" xsi:type="string" translate="true">name</argument>
                            <argument name="type" xsi:type="string">text</argument>
                            <argument name="renderer" xsi:type="string">Rissc\Printformer\Block\Adminhtml\Products\Grid\Renderer\Name</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="store_id">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Store</argument>
                            <argument name="index" xsi:type="string" translate="true">store_id</argument>
                            <argument name="type" xsi:type="string">store</argument>
                            <argument name="width" xsi:type="string">100</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="assigned_products">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Products assigned</argument>
                            <argument name="index" xsi:type="string" translate="true">master_id</argument>
                            <argument name="type" xsi:type="string">text</argument>
                            <argument name="width" xsi:type="string">100</argument>
                            <argument name="renderer" xsi:type="string">Rissc\Printformer\Block\Adminhtml\Products\Grid\Renderer\MagentoProducts</argument>
                        </arguments>
                    </block>
                </block>
            </block>
        </referenceBlock>
    </body>
</page>